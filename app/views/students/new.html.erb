<%= form_tag students_path do %>
  <%= label_tag(:name, "Full name") %>
  <%= text_field_tag(:name, nil, placeholder: @name_placeholder) %>

  <%= label_tag(:grade_level, "Grade level") %>
  <%= text_field_tag(:grade_level, @grade_level_placeholder) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, @age_placeholder) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>
